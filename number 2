#include <iostream>
#include <stack>
#include <string>
using namespace std;
bool isPalindrome(string s) {
    stack<char> st;
    int n = s.length();
    int mid = n / 2;
    for (int i = 0; i < mid; i++) {
        st.push(s[i]);
    }
    if (n % 2 != 0) {
        mid++;
    }
    for (int i = mid; i < n; i++) {
        if (st.top() != s[i]) {
            return false;
        }
        st.pop();
    }
    return true;
}

int main() {
    string s;
    cout << "Type a Word: ";
    getline(cin, s);
    if (isPalindrome(s)) {
        cout << "The word is a palindrome." << endl;
    } else {
        cout << "The word is not a palindrome." << endl;
    }
    return 0;
}
